{
    "cSpell.words": [
        "marp",
        "marpit",
        "mathjax"
    ],
    "markdownlint.config": {
        "default": true,
        // allow multiple H1s for Marp
        "MD025": false,
        "MD033": {
            "allowed_elements": [
                "div",
                "span",
                "style",
                "br",
                "sup"
            ]
        }
    },
    "markdown.copyFiles.destination": {
        "*": "img/${documentBaseName}/"
    },
    "markdown.marp.enableHtml": true,
    "yaml.schemas": {
        "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/ansible.json": "file:///Users/pa/Documents/VSCode/github/simple-avd-repo/avd_inventory/playbooks/deploy.yml",
        "https://raw.githubusercontent.com/srl-labs/containerlab/main/schemas/clab.schema.json": "file:///Users/pa/Documents/VSCode/github/simple-avd-repo/clab/topology.clab.yml"
    }
}